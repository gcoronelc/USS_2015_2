<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uss.edgar.practica10_httpclient.activity_retiro"
    android:background="@drawable/fondomain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂº Cuenta:"
        android:id="@+id/textCuenta"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad:"
        android:id="@+id/textView7"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/etClave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCuenta"
        android:layout_below="@+id/textCuenta"
        android:layout_alignLeft="@+id/textCuenta"
        android:layout_alignStart="@+id/textCuenta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"
        android:background="#ffffff"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMonto"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textSize="22dp"
        android:background="#ffffff"
        android:padding="10dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvUsuario"
        android:layout_toRightOf="@+id/tvUsuario"
        android:layout_toEndOf="@+id/tvUsuario"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:id="@+id/tvUsuario"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:id="@+id/btnAceptar"
        android:onClick="onClickIngresar"
        android:background="@drawable/boton"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/etMonto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETORNAR"
        android:id="@+id/btnRetornar"
        android:onClick="onCLickRetornar"
        android:background="@drawable/boton"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/tvResultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clave:"
        android:id="@+id/textView3"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/etCuenta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etClave"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textSize="22dp"
        android:background="#ffffff"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvResultado"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etMonto"
        android:layout_alignStart="@+id/etMonto"
        android:textColor="#ffff00" />
</RelativeLayout>
