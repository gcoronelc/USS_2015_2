<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uss.edgar.practica10_httpclient.Activity_deposito"
    android:background="@drawable/fondomain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂª Cuenta:"
        android:id="@+id/textView4"
        android:layout_marginTop="33dp"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto:"
        android:id="@+id/textView5"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/textMonto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textCuenta"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:background="#ffffff"
        android:padding="10dp"
        android:textSize="22dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textMonto"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textSize="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:id="@+id/btnAceptar"
        android:onClick="onClickAceptar"
        android:textSize="22dp"
        android:background="@drawable/boton"
        android:layout_below="@+id/textMonto"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginTop="45dp"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/textMonto"
        android:layout_alignStart="@+id/textMonto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETORNAR"
        android:id="@+id/btnRetornar"
        android:onClick="onCLickRetornar"
        android:textSize="22dp"
        android:background="@drawable/boton"
        android:textColor="#ffffff"
        android:layout_above="@+id/tvResultado"
        android:layout_alignLeft="@+id/btnAceptar"
        android:layout_alignStart="@+id/btnAceptar"
        android:layout_marginBottom="5dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:id="@+id/tvNombreUsuario"
            android:textSize="16dp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvResultado"
        android:textColor="#ffff00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
